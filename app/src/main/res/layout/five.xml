<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/alan85"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <TextView
            android:id="@+id/fivetext"
            android:text="登录/注册>"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/daishouhuo"
            android:layout_weight="2"
           android:src="@drawable/skitch"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <ImageView
            android:id="@+id/daifukuan"
            android:layout_weight="2"
            android:src="@drawable/back"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <ImageView
            android:layout_weight="2"
            android:id="@+id/daipingjia"
           android:src="@drawable/place"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <ImageView
            android:layout_weight="2"
            android:id="@+id/wodedingdan"
           android:src="@drawable/error"
            android:layout_width="60dp"
            android:layout_height="60dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/shouhuodizhitext"
        android:textSize="27dp"
        android:text="设置收货地址"
        android:background="#f0f000"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/mypay"
        android:text="我的钱包"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>